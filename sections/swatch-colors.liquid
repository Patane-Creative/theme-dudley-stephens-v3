<style>
{%- for block in section.blocks -%}
  .color-swatch--{{ block.settings.title | handle }} {
    background-color: {{ block.settings.swatch_color }};

    {%- if block.settings.swatch_image != nil -%}
      background-image: url({{ block.settings.swatch_image | img_url: '50x50' }});
    {%- endif -%}
  }
  {% if block.settings.monogram_swatch != nil %}
    .monogram-swatch--{{ block.settings.title | handle }} {
      background-image: url({{ block.settings.monogram_swatch | img_url: '1000x1000' }});
      background-size: cover;
    }
    .monogram-swatch--{{ block.settings.title | handle }} img {
      visibility: hidden;
    }
  {%- endif -%}
{%- endfor -%}
   
color-swatches .tag-list--swatches li{
  vertical-align: middle;
  margin-bottom: 0;
}
.variant-wrapper {
  margin-bottom: 1em;
}
.variant-input-wrap {
  display: flex;
  align-items: center;
  margin-top: .5em;
  margin-bottom: 0;
}
.tag-list a.remaining-swatch-count {
  margin: 0 4px 4px;
  font-size: .8em;
  line-height: .8em;
  letter-spacing: .03em;
  text-transform: uppercase;
}
.color-swatch--filter {
  height: 24px;
  width: 24px;
}
.color-swatch--disabled,
.color-swatch--unavailable {
  opacity: 0.4;
}
.color-swatch--disabled:after,
.color-swatch--unavailable:after {
  position: absolute;
  content: "";
  left: 50%;
  top: 0;
  bottom: 0;
  border-left: 3px solid;
  border-color: var(--shopify-editor-setting-color_borders);
  border-color: var(--colorBorder);
  transform: rotate(45deg);
}
.product-block .color-swatch--filter.active {
    height: 32px;
    width: 32px;
    box-shadow: 0 0 0 2px var(--colorBtnPrimary);
}

@media only screen and (max-width:768px) {
  .product__swatches {
      justify-content: center;
  }
}
</style>
   
   {% schema %}
   {
     "name": "Swatches",
     "blocks": [
       {
         "type": "color_swatch",
         "name": "Swatch",
         "settings": [
           {
             "id": "title",
             "type": "text",
             "label": "Name"
           },
           {
             "id": "swatch_color",
             "type": "color",
             "label": "Color"
           },
           {
             "id": "swatch_image",
             "type": "image_picker",
             "label": "Image (optional)"
           },
           {
             "type": "header",
             "content": "Monogram Swatch"
           },
           {
             "id": "monogram_swatch",
             "type": "image_picker",
             "label": "Image",
             "info": "Recommended size: 1000x1000 pixels (or larger). Will be used as the background for the monogram preview"
           }
         ]
       }
     ]
   }
   {% endschema %}
   