/* GLOBAL */
.btn,
.rte .btn,
.slideshow__slide .hero__link .btn {
  letter-spacing: 0.05em;
  font-weight: 500;
  text-transform: none;
}
a:not(.btn):after {
  color: var(--colorCartDot);
}
/* Product page */
.product-block--price {
   display: flex;
   align-items: center;
}
.product__price--compare {
   font-size: .85em;
}
.product__price--final-sale { 
   background-color: var(--colorTextBody);
   text-transform: uppercase;
   font-size: .75em;
    color: #fff;
    padding: 3px 8px;
}
.variant-input-wrap {
   flex-wrap: wrap;
}
.yotpo.bottomLine.yotpo-small {
   display: block;
   padding-bottom: 1em;
}
 .product-block--header {
   margin-bottom: 0;
 }
 .standalone-bottomline {
   text-align: left;
   padding-bottom: 1em;
 }
 .variant__label {
   font-weight: 500;
 }
 .variant-input-wrap label {
   border-radius: 1px;
   font-size: 0.85em;
 }
 .variant__label.product__price-savings {
   letter-spacing: 0;
   font-weight: 400;
 }
 .product-links {
   margin-bottom: .5em;
   color: var(--colorPrice);
 }

 label:not(.variant__button-label):not(.text-label) {
   font-size: 1em;
   letter-spacing: 0;
   text-transform: none;
}
span.product-color {
   opacity: .5;
   font-weight: 400;
   font-size: .85em;
}
.add-to-cart {
   text-transform: uppercase;
   font-size: 1em;
   font-weight: 400;
}
.icon--recycle {
  color: var(--colorBtnPrimary);
}

/* FIT GUIDE */
.tab-nav {
   display: flex;
   gap: 1em;
   justify-content: center;
}
.tab-nav button {
   background-color: var(--colorTextBody);
   padding: 0.5em 1em;
   border-radius: 2px;
   color: #fff;
}
.tab-nav button.active {
   background-color: var(--colorBtnPrimary);
   color: #fff;
}
.tab-nav button:not(.play-button):hover {
   background-color: var(--colorBtnPrimaryLight);
   color: #fff;
}
.carousels-slide {
   width: 33%;
}
.carousels-slide img, .carousels-slide video {
   padding: 28px 20px;
}
@media only screen and (max-width: 768px){
   .carousels-slide {
      width: 100%;
   }
}
button.play-button {
   position: absolute;
   z-index: 10;
   display: flex;
   align-items: center;
   justify-content: center;
   height: 100%;
   width: 100%;
}
video-slide .play-button svg {
   width: 50px;
   fill: #fff;
   opacity: 0.7;
}
video-slide .play-button:hover svg {
   opacity: 1;
}
video-slide[data-is-playing="true"] .play-button {
   opacity: 0;
}
video-slide video {
   width: 100%;
}

/* FOOTER */
.confirmation-message {
   margin-top: 1em;
   font-weight: 600;
}
.disclaimer, .footer__sms, .footer__social {
   margin-top: 1em;
}
.disclaimer a:hover {
  text-decoration: underline;
}
.disclaimer a:hover {
  color: var(--colorBtnPrimaryLight);
}
.footer__newsletter-btn-label {
  display: none;
  font-size: calc(var(--typeBaseSize)*.85);
  background-color: #fff;
  padding: 0.25em 0.5em;
  color: #000;
  border-radius: 2px;
}